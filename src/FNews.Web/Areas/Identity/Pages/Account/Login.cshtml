@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="section-top-border">
<div class="row justify-content-center">
    <div class="col-lg-4 col-md-4">
        <h3 class="mb-30">@ViewData["Title"]</h3>
            <form id="account" method="post">
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="mt-10">
                    <label asp-for="Input.Email" class="form-label"></label>
                    <input asp-for="Input.Email" type="text" name="first_name" placeholder="Email"
                           onfocus="this.placeholder = ''" onblur="this.placeholder = 'Email'" required
                           class="single-input">
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="mt-10">
                    <label asp-for="Input.Password" class="form-label"></label>
                    <input asp-for="Input.Password" type="text" name="first_name" placeholder="Password"
                           onfocus="this.placeholder = ''" onblur="this.placeholder = 'Password'" required
                           class="single-input">
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="genric-btn success mb-5">Log in</button>
                </div>
            </form>
    </div>
</div>
</div>


@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
